  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest - utils tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand", // Prevents tests from running in parallel, making debugging easier
        "--watchAll=false" // Optional: Only run once
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
      // "outFiles": [
      //   "${workspaceFolder}/**/*.js"
      // ]
    },
    {
      "name": "Chrome",
      "type":"chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      // "sourceMapPathOverrides": {
      //   "webpack:///./node_modules/editable-content/src/*": "${workspaceFolder}/packages/editable-content/src/*.ts",
      //   // "webpack:///./node_modules/editable-content/*": "${workspaceFolder}/packages/editable-content/src/utils/dom_operations.ts",
      //   // "webpack:///./node_modules/editable-content/utils/*": "${workspaceFolder}/packages/editable-content/src/utils/*.ts"
      // }

    }
  ]
}